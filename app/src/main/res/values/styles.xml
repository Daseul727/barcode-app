<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.NoActionBar.Splash" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- input box -->
    <style name="AppTheme.BasicInputBox">
        <item name="box_bg_error">@drawable/rect_stroke_rounded_red</item>
        <item name="box_bg_off">@drawable/rect_stroke_rounded_3_white_graydd</item>
        <item name="box_bg_on">@drawable/rect_stroke_rounded_3_white_graydd</item>
    </style>

</resources>