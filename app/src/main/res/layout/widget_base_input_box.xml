<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="title" />

        <ImageView
            android:id="@+id/iv_highlight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_asterisk" />

        <EditText
            android:id="@+id/edt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textColor="#ff00ff"
            android:textSize="18dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="6dp"
            android:padding="6dp"
            app:srcCompat="@drawable/btn_form_delete" />

        <ToggleButton
            android:id="@+id/btn_visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/selector_btn_visible"
            android:button="@drawable/transparent"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>
</layout>
